@{
    Layout = null;
}
@using ERP_Models.ViewModel
@using ERP_Models
@model StudentModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Print Admit Card</title>
    <!-- Bootstrap -->
    <link href="/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/print.css" rel="stylesheet" media="print" />
    <link href="/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <div class="col-sm-12" style="text-align: center;">
        @foreach (var i in Model.ListStud)
        {                         
            <div id="dvMain" class="col-sm-12" style="height: 460px;">
                <h4 style="text-transform: uppercase;"><b>DISTRICT INSTITUTE OF EDUCATION AND TRAININGS @i.DistDetail.Name</b></h4>
                <h5 style="margin-top: -6px;"><b>CLASS @i.StdDetail.Standard @Model.ExamDetail.Name</b></h5>
                <div class="col-sm-4"></div>
                @*<div  class="col-sm-4" style="margin-top: -23px;">*@
                    <h4 id="hTitle" class="col-sm-4" style="background-color: black; color: white; text-align: center;margin-top:-5px;">ADMIT CARD</h4>
            @*    </div>*@
                @*<div class="col-sm-4"></div>*@
                <div class="col-sm-12" style="text-align: left; border-top: solid 1px; border-bottom: solid 1px;"><b>Session Annual : </b>@Model.AcYearDetail.Year&nbsp;&nbsp;&nbsp;<b>Roll No. : </b>@i.RollNo</div>

                <div class="col-sm-8" style="text-align: left;">
                    <br />
                    <table>
                        <tr>
                            <td><b>Registration No. : </b></td>
                            <td>@i.Prefix@i.StudID</td>
                        </tr>
                        <tr>
                        <td><b>Name of Candidate : </b></td><td>@i.FirstName @i.MiddleName @i.LastName</td>
                            </tr>                        
                        <tr>
                        <td><b>Father's Name :</b></td><td>@i.FatherName</td>
                        </tr>
                        <tr><td><b>Mother's Name :</b></td><td>@i.MotherName</td></tr>
                        <tr><td><b>Date of Birth :</b></td><td>@i.DOB.Value.ToString("dd/MM/yyyy")</td></tr>
                        <tr><td><b>Zone :</b></td><td>@i.ZoneDetail.Name</td></tr>
                        <tr><td><b>Institute :</b></td><td>@Model.SchoolDetail.Name</td></tr>


                    </table>
                    <br />
                    <br />

                    <b>Authorised Signatory</b><br />
                    <br />
                    <br />
                    <b>TIMING 10.30 AM TO 1.00 PM</b>
                <br />
                    <br />    
                </div>

                <div class="col-sm-4">
                    <br />
                    <img id="img" style="border:solid 1px;" src="@Url.Content("/PhotoUpload/Photo/" + i.Photo)" onError="this.onerror=null;this.src='/Images/noImage.png';" alt="photo" class="img-rounded thumb-image" width="100" height="100" /><br />
                    <img id="img1" style="border:solid 1px;" src="@Url.Content("/PhotoUpload/Sign/" + i.Sign)" onError="this.onerror=null;this.src='/Images/noImage.png';" alt="sign" class="img-rounded thumb-image" width="100" height="50" /><br />
                    <img id="img2" style="border:solid 1px;" src="@Url.Content("/PhotoUpload/Thumb/" + i.Thumb)" onError="this.onerror=null;this.src='/Images/noImage.png';" alt="thumb" class="img-rounded thumb-image" width="100" height="50" />
                </div>
                
                <div class="col-sm-12" style="text-align: left; font-size: 13px;border-top:solid 1px;border-bottom:solid 1px;">
                    
                    <b>NOTE : Candidate shall be allowed to appear in the examination Hall without admit card.</b>
                    
                </div>
             
            </div> 
                <div class="col-sm-12">
                    <b><i class="fa fa-scissors" aria-hidden="true">-------------------------------------------------------------------------------------------------------------------------------</i></b>
                </div>               
        }
    </div>
</body>
</html>
