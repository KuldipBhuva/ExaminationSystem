@{
    Layout = null;
}

@using ERP_Models.ViewModel
@model UserModel

<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Login - Examination System</title>

    <!-- Bootstrap -->
    <link href="/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--side menu plugin-->
    <link href="/assets/plugins/hoe-nav/hoe.css" rel="stylesheet">
    <!-- icons-->
    <link href="/assets/plugins/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="/assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/assets/plugins/iCheck/custom.css" rel="stylesheet">
    <!--template custom css file-->
    <link href="/assets/css/style.css" rel="stylesheet">

    <script src="/assets/js/modernizr.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>
<body>

    <div class="page-center">
        <div class="page-center-in">
            <form class="sign-box" method="post" action="/Login/Index" id="loginform" name="frmLogin" style="box-shadow: 0px 0px 10px 0px;">
                <div class="sign-avatar">
                    <img src="" alt="company logo" class="img-circle">
                </div>
                <header class="sign-title">Sign In</header>
                <div class="form-group">
                    @*<input type="text" class="form-control" placeholder="E-Mail or Phone">*@
                    @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Username", @required = "required", @id = "user_name", @name = "Username", @autocomplete = "off", @class = "form-control input-lg" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="form-group">
                    @*<input type="password" class="form-control" placeholder="Password">*@
                    @Html.TextBoxFor(m => m.Password, new { @placeholder = "Password", @type = "password", @required = "required", @id = "user_pwd", @name = "Password", @autocomplete = "off", @class = "form-control input-lg" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                @*<button type="submit" class="btn btn-success rounded btn-lg">Sign in</button>*@
                <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Sign in</button>
                @*<div class="form-group clearfix">*@
                <div class="checkbox pull-right">
                    @*<input type="checkbox" id="myCheckbox" name="myCheckbox" class="i-checks">
                            <label for="myCheckbox">Remember Me </label>*@
                    <label style="float: right; color: red;">
                        @if (TempData["EMsg"] != null)
                        { @TempData["EMsg"].ToString()}</label>
                </div>
                @* <div class="pull-left">
                            <p><a href="#" data-toggle="modal" data-target="#ModalRP">Reset Password</a></p>
                            
                        </div>*@
                @*</div>*@
                @*       <hr>
                    <p>Don't have an account? <a href="page-register.html">Sign up</a></p>*@
            </form>


            <!-- Modal -->
            <div class="modal fade" id="ModalRP" role="dialog">
                <div class="modal-dialog modal-lg">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Change Password</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <form method="post" action="/Login/ResetPwd">
                                    @*@Html.Label("* Old Password", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                <input type="password" name="txtOpwd" class="form-control" required />
                            </div>*@
                                    @Html.Label("* Email", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-4">
                                        <input type="email" name="txtEmail" class="form-control" required />
                                    </div>
                                    <div class="col-sm-12" style="height: 5px;"></div>
                                    @*@Html.Label("* New Password", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                <input type="password" name="txtNpwd" class="form-control" required />
                            </div>
                            @Html.Label("* Confirm New Password", new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                <input type="password" name="txtNCpwd" class="form-control" required />
                            </div>*@
                                    <input type="submit" value="Reset Password" class="btn btn-primary" onclick="return confirm('Do you really want to reset password?')" />
                                </form>
                            </div>
                        </div>
                        <div class="modal-footer" style="border: none;">

                            @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <!--page center in-->
    </div>
    <!--page center-->

    <!--Common plugins-->
    <script src="/assets/plugins/jquery/dist/jquery.min.js"></script>
    <script src="/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/plugins/hoe-nav/hoe.js"></script>
    <script src="/assets/plugins/pace/pace.min.js"></script>
    <script src="/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="/assets/js/app.js"></script>
    <!-- iCheck -->
    <script src="/assets/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_flat-blue',
                radioClass: 'icheckbox_flat-blue'
            });
        });
    </script>
    @{
        var message = TempData["AMsg"] ?? string.Empty;
    }
    <script type="text/javascript">
        var message = '@message';
        if (message)
            alert(message);
    </script>


    <script type="text/javascript">
        window.onload = function () {
            $("#user_name").focus();

        }

    </script>
</body>

</html>

